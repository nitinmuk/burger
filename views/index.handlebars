<header>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <img src="./assets/images/burger.jpg" class="burger-image" alt="Burger">
                <h2>Eat Da Burger!</h2>
            </div>
            <div class="col-md-4">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-undevoured-block}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <form class="create-form">
                        <div class="form-group">
                            <textarea class="form-control" id="burger-name" rows="3"></textarea>
                        </div>
                        <button type="button" class="btn btn-primary burger-submit-btn">Submit</button>
                        <p>Enter a burger you want to eat and click the "Submit" button</p>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-devoured-block}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</header>